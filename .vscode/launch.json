{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run pytest in current file",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${fileDirname}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "..\\..\\..\\base",
                "PYTEST_ADDOPTS": "--no-cov"
            },
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "runtimeExecutable": "/Applications/Chromium.app/Contents/MacOS/Chromium",
            "name": "Launch Chrome against local frontend",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/frontend/"
        },
        {
            "name": "chrome-localhost-local-to-wsl",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}/frontend/",
        },
    ]
}
